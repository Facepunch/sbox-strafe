@using System.Linq;
@attribute [StyleSheet("/UI/VoiceChat/StrafeVoiceChatList.scss")]

@code
{
	public static StrafeVoiceChatList Current { get; internal set; }

	public StrafeVoiceChatList()
	{
		Current = this;
	}

	public void OnVoicePlayed( long steamId, float level )
	{
		var entry = ChildrenOfType<StrafeVoiceChatEntry>().FirstOrDefault( x => x.Friend.Id == steamId );
		if ( entry == null ) entry = new StrafeVoiceChatEntry( this, steamId );
		entry.Update( level );
	}
}
