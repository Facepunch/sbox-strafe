@inherits Panel
<style>
StrafeVoiceIcon {
    position: absolute;
    bottom: 24px;
    right: 32px;
    opacity: 0.0;
    padding: 8px;
    background-image: url("ui/mic.png");
    background-size: 100%;
    width: 32px;
    aspect-ratio: 1;

    &.active {
        opacity: .25;
    }
}
</style>

@code
{
	private float VoiceLevel = 0.0f;

	public override void Tick()
	{
		base.Tick();

		VoiceLevel = VoiceLevel.LerpTo(Voice.Level, Time.Delta * 40.0f);
		var tr = new PanelTransform();
		tr.AddScale(1.0f.LerpTo(1.2f, VoiceLevel));
		Style.Transform = tr;
		Style.Dirty();

		SetClass("active", Voice.IsRecording);
	}
}