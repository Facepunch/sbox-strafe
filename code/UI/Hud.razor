
@inherits RootPanel
@attribute [StyleSheet("UI/Styles/_styles.scss")]

<root>
    <Crosshair />
    <HudTimer />
	<HudStatus />
	<Chatbox />
	<TabMenu />
</root>

@code {

	internal Hud()
	{
		Local.Hud = this;
	}

	[ConCmd.Client("strafe_toggle_hud")]
	public static void ToggleHud()
	{
		Local.Hud.SetClass("hidden", !Local.Hud.HasClass("hidden"));
	}
}
